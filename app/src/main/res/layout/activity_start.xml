<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkSeaGreen"
    tools:context=".start.StartView">

    <ImageView
        android:id="@+id/doubt_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_doubt"
        app:layout_constraintBottom_toTopOf="@id/btn_randomQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_randomQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_for_start_buttons"
        android:drawableStart="@drawable/ic_for_random_button"
        android:text="@string/for_random_btn"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/btn_category"
        app:layout_constraintEnd_toEndOf="@id/btn_category"
        app:layout_constraintStart_toStartOf="@id/btn_category" />

    <Button
        android:id="@+id/btn_category"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_start_buttons"
        android:drawableStart="@drawable/ic_checklist"
        android:text="@string/for_category_btn"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_test_general_questions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_for_start_buttons"
        android:text="Тестовая кнопка"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/btn_category"
        app:layout_constraintStart_toStartOf="@id/btn_category"
        app:layout_constraintTop_toBottomOf="@id/btn_category" />

</android.support.constraint.ConstraintLayout>