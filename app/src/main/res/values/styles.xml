<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkOliveGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
        <item name="colorAccent">@color/colorDarkSeaGreen</item>
    </style>

    <!-- Style for QuizView-->
    <style name="QuizViewTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkOliveGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
    </style>

    <!-- Style for SplashScreen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Styles for navigation drawer-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
