<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkOliveGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
        <item name="colorAccent">@color/colorDarkSeaGreen</item>
    </style>

    <!-- Style for QuizView-->
    <style name="QuizViewTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkOliveGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">20dp</item>
        <item name="contentPaddingTop">20dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/colorDarkSeaGreen</item>
    </style>
</resources>
